<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScoreActivity"
    android:background="@drawable/green">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/picture"
            android:layout_width="200dp"
            android:layout_height="200dp"></ImageView>
    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Your Score Is : "
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />
    <com.github.lzyzsd.circleprogress.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:circle_text_size="50sp"
        app:circle_finished_color="@color/colorBlack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_locale"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/input_margin"
            android:text="Afficher ma position"
            android:background="@color/colorWhite"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retry_score"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/input_margin"
            android:text="Retry"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:textColor="@android:color/black"
            android:layout_marginRight="2dp"/>



        <Button
            android:id="@+id/btn_exit_score"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/input_margin"
            android:text="Exit"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:textColor="@android:color/black" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>